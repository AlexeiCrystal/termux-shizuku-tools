#!/data/data/com.termux/files/usr/bin/sh

if [ ! -f "$PREFIX/shizuku/shizuku_functions.sh" ]; then
    echo 'shizuku_functions.sh file not found. Please reinstall package!'
    exit 1
fi

. $PREFIX/shizuku/shizuku_functions.sh

echo "Is Shizuku installed: $(is_shizuku_installed)"
echo "Shizuku version code: $(shizuku_version_code)"
echo "Is Shizuku server running: $(is_shizuku_server_running)"

echo " "
echo "Package name: termux-shizuku-tools"
echo "Package author: AlexeiCrystal"
echo "Package version: $(termux_shizuku_tools_version)"
echo "Package version code: $(termux_shizuku_tools_version_code)"
echo "Package GitHub: https://github.com/AlexeiCrystal/termux-shizuku-tools"
